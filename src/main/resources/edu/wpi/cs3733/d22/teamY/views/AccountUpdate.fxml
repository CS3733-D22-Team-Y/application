         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Polygon fx:id="submitTriangle" fill="WHITE" layoutX="550.0" layoutY="655.0" onMouseClicked="#submitAndReturn" points="-50.0, 40.0, 50.0, 40.0, 0.0, -60.0" stroke="BLACK" strokeType="INSIDE" style="-fx-rotate: 180; -fx-scale-x: .6; -fx-scale-y: .5;" />

         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="314.0" layoutY="496.0" prefHeight="63.0" prefWidth="590.0" styleClass="plainText" text="Password must be at least 5 characters long, with at least one number, one letter and one special character." textAlignment="CENTER" textFill="RED" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <MFXPasswordField fx:id="confirmPasswordField" layoutX="540.0" layoutY="434.0" prefHeight="51.0" prefWidth="362.0" />
      <Label layoutX="319.0" layoutY="438.0" prefHeight="44.0" prefWidth="201.0" styleClass="inputLabel" text="Confirm Password:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="passwordsDoNotMatch" layoutX="393.0" layoutY="472.0" prefHeight="56.0" prefWidth="314.0" text="Error: Passwords do not match" textAlignment="CENTER" textFill="RED" textOverrun="CLIP" visible="false" wrapText="true">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
    </children>
</AnchorPane>

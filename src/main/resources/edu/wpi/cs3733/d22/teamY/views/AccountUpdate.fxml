            <Image url="@images/do-rgb.jpg" />
         </image>
      </ImageView>
      <Label fx:id="Welcome" layoutX="10.0" styleClass="title" text="Update Your New Account">
         <font>
            <Font name="Arial Rounded MT Bold" size="60.0" />
